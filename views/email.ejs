    <script src="/javascripts/jquery-3.5.1.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/email.css' />
    <link rel="stylesheet" href="/stylesheets/footer.css">
  </head>

  <body>
    <div>
        <header id="fixHeader"></header>
        <div id="emaildiv">
            <h1>Email Auth</h1>
            <form action="/email" method="POST" id="emailForm" name="email">
                <div class="inp_section">
                    <input type="text" id="email" name="email" maxlength="30" autocomplete="off" placeholder="ex) abc123@gmail.com" required>
                    <span class="msg" id="email_msg"></span>
                    <label>E-MAIL</label>
                    <button type="button" id="send_num">Send AuthNum</button>
                </div>
                <div class="inp_section">
                    <input type="text" id="numCheck" name="numCheck" required>
                    <span class="msg" id="auth_msg"></span>
                    <label>Auth Number</label>
                </div>

                <div class="btn">
                    <button type="submit" id="emailBtn">Authentication</button>
                </div>
            </form>
        </div>
    </div>

    <footer id="footer">
        <div class="contain">
            <div class="foot-info">
                <address>
                    (주)내일은 토요일 
                    <span class="bar">|</span>   
