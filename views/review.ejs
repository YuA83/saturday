<html>
    <head>
        <title>SATURDAY</title>
        <link rel="shortcut icon" href="/images/favicon.ico">
        <link rel="icon" href="/images/favicon.ico">

        <link rel='stylesheet' href='/stylesheets/reviewlist.css' />
        <link rel="stylesheet" href="/stylesheets/footer.css">
        <script src="/javascripts/jquery-3.5.1.min.js"></script>
    </head>

    <body>
        <header id="fixHeader"></header>
        <div id="reviewlist">
            <h1>R E V I E W</h1>
            <div class="write">
                <a id="boardinsert" href="/review/insert">Write</a>
            </div>
            <table width = "100%" border="1">
                <tr class="trTitle">
                    <th>INDEX</th>
                    <th>TITLE</th>
                    <th>USER ID</th>
                    <th>DATE</th>
                    <th>VIEWS</th>
                </tr>
                <% for(let i = (page * page_num) - page_num; i < (page * page_num); i++) { %>
                    <% if(i > leng) { %>
                        <% i++; %>
                    <% } else { %>
                        <% var datas = data[i] %>
                        <tr>
                            <td>
                                <%= datas.idx %>
                            </td>
                            <td class="title">
                                <a href='/review/detail/<%= datas.idx %>'><%= datas.title %></a>
                            </td>
                            <td>
                                <%= datas.userid %>
                            </td>
                            <td>
                                <%= moment(datas.date).format('YYYY.MM.DD') %>
                            </td>
                            <td>
                                <%= datas.views %>
                            </td>
                        </tr>
                <% } } %>
            </table>

            <div class="num-panel">
                <% for(var j = 0; j < data.length / page_num; j++) { %>
                <span class="num" id="<%= j+1 %>">[
                    <a href="/review/<%= j + 1 %>">
                        <%= j + 1 %>
                    </a>
                ]</span>
                <% } %>
            </div>
        </div>

        <footer id="footer">
            <div class="contain">
                <div class="foot-info">
                    <address>
                        (주)내일은 토요일 
                        <span class="bar">|</span>   
                        서울 강동구 천호대로 지하 997  
                        <span class="bar">|</span> 
                        Tel     : 010-1234-5678 
                        <span class="bar">|</span> 
                        E-mail  : tmrwMaster@gmail.com  
                        <br>
                        Copyright © 2021 (주)내일은 토요일. All Right Reserved.
                    </address>
                </div>	
                <div
                    id="kakao-talk-channel-chat-button"
                    data-channel-public-id="_DiNpK"
                    data-title="question"
                    data-size="small"
                    data-color="mono"
                    data-shape="pc"
                    data-support-multiple-densities="true"
                >
                </div>			
            </div>	
        </footer>  
    
        <script>
            window.kakaoAsyncInit = function() {
              Kakao.Channel.createChatButton({
                container: '#kakao-talk-channel-chat-button',
              });
            };
          
            (function(d, s, id) {
              var js, fjs = d.getElementsByTagName(s)[0];
              if (d.getElementById(id)) return;
              js = d.createElement(s); js.id = id;
              js.src = 'https://developers.kakao.com/sdk/js/kakao.channel.min.js';
              fjs.parentNode.insertBefore(js, fjs);
            })(document, 'script', 'kakao-js-sdk');
        </script>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="/javascripts/review.js"></script>  
    </body>
</html>