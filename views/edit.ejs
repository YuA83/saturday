<body>
    <header id="fixHeader"></header>
    <div class="container">
        <form method="POST">
            <div class="boardInsert">
                <label class="userid" for="userid">USER ID</label>
                <span class="useridInfo"><input type="hidden" class="writeArea" id="userid" name= "userid" value="<%= data.userid %>"><%= data.userid %></span>
            </div>
            <div class="boardInsert">
                <h1>
                    <input type="text" class="writeArea" id="title" name="title" value="<%=data.title%>">
                </h1>
            </div>
            <div class="boardInsert">
                <textarea id="summernote" class="write_content" type="text" name="contents"><%=data.contents%></textarea>
            </div>
            <!-- 이미지는 한 번 올리면 수정할 수 없어용 -->
            <button type="submit" class="submitBtn">Edit</button>
        </form>
    </div>

    <script>
    $(document).ready(function() {
        $('#summernote').summernote({
            height: 300,                 // 에디터 높이
            minHeight: 100,             // 최소 높이
            maxHeight: 400,             // 최대 높이
            focus: true,                  // 에디터 로딩후 포커스를 맞출지 여부
            lang: "ko-KR",                    // 한글 설정
            placeholder: '최대 2048자',    //placeholder 설정
	    });
    });
    </script>

